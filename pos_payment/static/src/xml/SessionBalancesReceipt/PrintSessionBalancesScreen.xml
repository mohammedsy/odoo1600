<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PrintSessionBalancesScreen" owl="1">
        <div class="receipt-screen screen">
            <div class="screen-content">
                <div class="top-content">
                    <span class="button back" t-on-click="back">
                        <i class="fa fa-angle-double-left"></i>
                        <span> </span>
                        <span>Back</span>
                    </span>
                </div>
                <div class="centered-content">
                    <div class="button print" t-on-click="print">
                        <i class="fa fa-print"></i> Print Session Balances Receipt
                    </div>
                    <div class="pos-receipt-container" t-ref="session-payments-receipt">
                        <SessionBalancesReceipt receipt="props.receipt" />
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
