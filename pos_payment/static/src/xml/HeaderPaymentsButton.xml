<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="HeaderPaymentsButton" owl="1">
        <div class="payments-button" t-att-class="{ highlight: props.isPaymentsScreenShown }" t-on-click="onClick">
            <div class="with-badge" t-att-badge="props.paymentsCount">
                <i class="fa fa-money" aria-hidden="true"></i>
            </div>
            <div t-if="!env.isMobile">Payments</div>
        </div>
    </t>

</templates>
